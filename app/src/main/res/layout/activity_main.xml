<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/coinImg"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:src="@drawable/heads"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:id="@+id/RLoptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/coinImg"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/fejBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fej"
            android:textSize="15sp"/>
        <Button
            android:id="@+id/irasBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Írás"
            android:textSize="15sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/dobasokTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/RLoptions"
        android:text="Dobások: 0"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/gyozelemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dobasokTextView"
        android:text="Győzelem: 0"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/veresegTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gyozelemTextView"
        android:text="Vereség: 0"
        android:textSize="30sp"/>

</RelativeLayout>